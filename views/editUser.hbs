{{> menu id = "editUser"}}
<div class="ui two column grid basic middle aligned segment">
  <div class="column">
    <img class="ui image"
         src="https://images-na.ssl-images-amazon.com/images/I/61JVy%2BSjxrL.png">
  </div>
  <div class="column">
    <h3> Edit Details >>></h3>
    <form class="ui stacked inverted segment form" action="/updateuser" method="POST">
      <div class="two fields">
        <div class="field">
          <label>First Name</label>
          <input placeholder="First Name" type="text" name="firstName" />
        </div>
        <div class="field">
          <label>Last Name</label>
          <input placeholder="Last Name" type="text" name="lastName" />
        </div>
      </div>
      <div class="field">
        <label>Email</label>
        <input placeholder="Email" type="text" name="email" />
      </div>
      <div class="field">
        <label>Password</label>
        <input placeholder="Password" type="password" name="password" />
      </div>
      <button class="ui blue submit button">Update Info</button>
    </form>
  </div>
</div>