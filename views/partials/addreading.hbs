<form class="ui inverted segment form" action="/station/{{station.id}}/addreading" method="POST">
  <div class="five fields">
    <div class="field">
      <label>Code</label>
      <input placeholder="000" type="text" name="code">
    </div>
    <div class="field">
      <label>Temperature</label>
      <input placeholder="00.0C" type="text" name="temp">
    </div>
    <div class="field">
      <label>Wind Speed</label>
      <input placeholder="00.00kMh" type="text" name="windspeed">
    </div>
    <div class="field">
      <label>Wind Direction</label>
      <input placeholder="000deg" type="text" name="windDirection">
    </div>
    <div class="field">
      <label>Pressure</label>
      <input placeholder="000hPa" type="text" name="pressure">
    </div>
  </div>
  </div>
  <br>
  <button class="ui large blue submit button"> Submit Report</button>
  <br>
  <br>
</form>

