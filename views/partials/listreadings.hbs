<table class="ui inverted grey celled table">
  <thead>
  <tr>
    <th>Date</th>
    <th>Code</th>
    <th>Temp</th>
    <th>Wind Speed</th>
    <th>Wind Direction</th>
    <th>Pressure</th>
    <th>Remove</th>
  </tr>
  </thead>
  <tbody>
  {{#each station.readings}}
    <tr>
      <td>
        {{date}}
      </td>
      <td>
        {{code}}
      </td>
      <td>
        {{temp}}
      </td>
      <td>
        {{windspeed}}
      </td>
      <td>
        {{windDirection}}
      </td>
      <td>
        {{pressure}}
      </td>
      <td>
        <a href="/station/{{../station.id}}/deletereading/{{id}}" class="ui red icon button">
          <i class="icon trash"></i></a>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>